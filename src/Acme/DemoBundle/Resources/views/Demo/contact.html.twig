{% extends "AcmeDemoBundle::base.html.twig" %}

{% block title %}"Symfony - {% trans %}Contact form{% endtrans %}"{% endblock %}

{% block content %}
    <form action="{{ path('_demo_contact') }}" method="POST" id="contact_form">
        {{ form_errors(form) }}

        {{ form_row(form.email) }}
        {{ form_row(form.message) }}

        {{ form_rest(form) }}
        <input type="submit" value="{% trans %}Send{% endtrans %}" class="symfony-button-grey" />
    </form>
{% endblock %}
